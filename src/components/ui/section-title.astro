---
import { animationClass } from "../../utils/utils";
interface Props {
  title: string;
  description?: string;
  center?: boolean;
}

const { title, description, center = true } = Astro.props;
---

<div class={`pt-8 pb-4 ${center ? "text-center" : ""} +` + animationClass}>
  <h2 class="text-3xl font-bold tracking-tight sm:text-4xl text-slate-800">{title}</h2>
  {description && <p class="mt-4 text-xl max-w-[600px] text-center mx-auto text-secondary-foreground">{description}</p>}
</div>