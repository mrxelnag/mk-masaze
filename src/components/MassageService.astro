---
// Component for displaying massage service details
export interface Props {
  title: string;
  description: string;
  image: string;
  price: string;
  benefits: string[];
  longDescription: string;
}

const { title, description, image, price, benefits, longDescription } = Astro.props;
---

<div class="max-w-6xl mx-auto p-8">
  <div class="mb-8 text-center">
    <h1 class="text-4xl mb-2">{title}</h1>
    <p class="text-2xl font-bold text-gray-600">{price}</p>
  </div>

  <div class="flex flex-col md:flex-row gap-8">
    <div class="md:w-1/3">
      <img src={image} alt={title} class="w-full rounded-lg shadow-md" />
    </div>

    <div class="md:w-2/3">
      <p class="text-xl mb-6">{description}</p>

      <h2 class="text-2xl mb-4">VÃ½hody</h2>
      <ul class="mb-8">
        {benefits.map((benefit) => <li class="mb-2">{benefit}</li>)}
      </ul>

      <div class="leading-relaxed">
        {
          longDescription
            .split("\n")
            .map((paragraph) => (paragraph.trim() ? <p class="mb-4">{paragraph.trim()}</p> : <br />))
        }
      </div>
    </div>
  </div>
</div>
