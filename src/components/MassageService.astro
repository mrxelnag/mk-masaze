---
import type { Service } from "~/components/ui/massage.astro"
// Component for displaying massage service details

import Image from "./Image.astro";
interface Props extends Service {}



const { title, description, image, pricing, benefits, longDescription, recommendations, contraindications } = Astro.props;
---

<div class="min-h-screen pt-12">
  <!-- Split Hero Section -->
  <div class="flex flex-col justify-center items-center lg:flex-row">
    <!-- Left side - Image -->
    <div class="lg:w-1/2 h-[50vh] relative">
      <Image
        src={image} 
        alt={title} 
        class="w-full h-full object-cover"
      />
      <div class="absolute bottom-0 left-0 w-full h-24 bg-gradient-to-t from-slate-900 to-transparent lg:hidden"></div>
    </div>

    <!-- Right side - Content -->
    <div class="lg:w-1/2 flex flex-col justify-start px-8 pb-2">
      <div class="max-w-xl">
        <h1 class="text-4xl lg:text-6xl font-bold text-slate-800 mb-6 leading-tight">{title}</h1>
        <p class="text-xl text-slate-600 mb-8">{longDescription}</p>

        <!-- Pricing Tabs -->
        <div class="mb-12">
          <h2 class="text-2xl font-semibold text-slate-700 mb-6 inline-block border-b-2 border-primary/50 pb-1">Ceník</h2>
          <div class="space-y-4">
            {pricing && pricing.map((item) => (
              <div class="flex justify-between items-center border-b border-slate-200 pb-4">
                <div>
                  <span class="text-2xl font-bold text-primary">{item.price}</span>
                  <span class="text-slate-500 ml-2">/ {item.duration}</span>
                </div>
                <button class="px-6 py-2 bg-primary text-white rounded-md hover:bg-primary transition-colors">
                  Rezervovat
                </button>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- Main Content in Alternating Sections -->
  <div class="max-w-7xl mx-auto px-4 py-16">
    <!-- Benefits Section - Horizontal Cards -->
    <div class="mb-24">
      <h2 class="text-3xl font-bold text-slate-800 mb-12 text-center">
        <span class="inline-block border-b-2 border-primary/50 pb-2">Výhody</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {benefits && benefits.map((benefit, index) => (
          <div class="bg-white p-6 rounded-md border-l-4 border-primary/50 shadow-sm hover:shadow-md transition-shadow flex items-center">
            <div class="bg-primary/10 rounded-full p-3 mr-4">
              <span class="text-primary font-bold">{index + 1}</span>
            </div>
            <p class="text-lg text-slate-700">{benefit}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Additional Information - Floating Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      {recommendations && (
        <div class="bg-gradient-to-br from-primary to-blue-50 rounded-lg overflow-hidden relative">
          <div class="absolute top-0 right-0 w-20 h-20 bg-primary rounded-bl-full opacity-20"></div>
          <div class="p-8 relative z-10">
            <h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Doporučení
            </h2>
            <p class="text-slate-700">{recommendations}</p>
          </div>
        </div>
      )}

      {contraindications && (
        <div class="bg-gradient-to-br from-red-50 to-pink-50 rounded-lg overflow-hidden relative">
          <div class="absolute top-0 right-0 w-20 h-20 bg-red-500 rounded-bl-full opacity-20"></div>
          <div class="p-8 relative z-10">
            <h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              Kontraindikace
            </h2>
            <p class="text-red-700">{contraindications}</p>
          </div>
        </div>
      )}
    </div>
  </div>
</div>
