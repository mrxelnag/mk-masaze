---
import Layout from '../../layouts/Layout.astro';
import { massageServices } from '../../sluzby-data.js';

const pageTitle = "Naše služby | Masáže";
---

<Layout title={pageTitle}>
  <div class="max-w-6xl mx-auto p-8">
    <h1 class="text-4xl text-center mb-8">Naše služby</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {massageServices.map(service => (
        <div class="border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
          <h2 class="text-2xl mb-4">{service.title}</h2>
          <p class="mb-4">{service.description}</p>
          <p class="font-bold my-4">{service.price}</p>
          <a href={`/sluzby/${service.id}`} class="inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors">Více informací</a>
        </div>
      ))}
    </div>

    <div class="mt-12 text-center">
      <a href="/" class="text-gray-700 font-medium hover:text-blue-600 transition-colors">← Zpět na hlavní stránku</a>
    </div>
  </div>
</Layout>
