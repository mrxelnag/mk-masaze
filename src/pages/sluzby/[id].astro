---
import Layout from '../../layouts/Layout.astro';
import MassageService from '../../components/MassageService.astro';
import { massageServices } from '../../sluzby-data.js';

// This function is required for static site generation with dynamic routes
export function getStaticPaths() {
  return massageServices.map(service => ({
    params: { id: service.id },
    props: { service },
  }));
}

// Get the massage service from props
const { service: massageService } = Astro.props;

// Update the page title
const pageTitle = `${massageService.title} | Masáže`;
---

<Layout title={pageTitle}>
  <MassageService 
    title={massageService.title}
    description={massageService.description}
    image={massageService.image}
    price={massageService.price}
    benefits={massageService.benefits}
    longDescription={massageService.longDescription}
  />

  <div class="max-w-6xl mx-auto px-8 my-8">
    <a href="/sluzby" class="inline-block mt-8 text-gray-700 font-medium hover:text-blue-600 transition-colors">← Zpět na přehled služeb</a>
  </div>
</Layout>
